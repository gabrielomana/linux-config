#!/bin/bash
function install_ZSH_ROOT()
{
dir_user="$(pwd)"
dir_root="/root"
clear
######## BackUp .zshrc ##########
if sudo mv -n ${dir_root}/.zshrc ${dir_root}/.zshrc-backup-$(date +"%Y-%m-%d"); then # backup .zshrc
    echo -e "Backed up the current .zshrc to .zshrc-backup-date\n"
fi


######## Installing oh-my-zsh ##########
clear
echo -e "Installing oh-my-zsh\n"

if [ -d ${dir_root}/.oh-my-zsh ]; then
    echo -e "oh-my-zsh is already installed\n"
    sudo git -C ${dir_root}/.oh-my-zsh remote set-url origin https://github.com/ohmyzsh/ohmyzsh.git
else
    sudo git clone --depth=1 https://github.com/ohmyzsh/ohmyzsh.git ${dir_root}/.oh-my-zsh
fi
sleep 5
######## dotfiles ##########
clear
sudo cp -f dotfiles/.zshrc ${dir_root}/
sudo mkdir -p ${dir_root}/.cache/zsh/                # this will be used to store .zcompdump zsh completion cache files which normally clutter $HOME

if [ -f ${dir_root}/.zcompdump ]; then
    sudo mv ${dir_root}/.zcompdump* ${dir_root}/.cache/zsh/
fi
sleep 5
######## Plugins ##########
clear
###ZSH-AUTOPAIR
if [ -d ${dir_root}/.oh-my-zsh/custom/plugins/zsh-autopair ]; then
    sudo cd ${dir_root}/.oh-my-zsh/custom/plugins/zsh-autopair && git pull
else
    sudo git clone https://github.com/hlissner/zsh-autopair ${dir_root}/.oh-my-zsh/custom/plugins/zsh-autopair
fi

###zsh-autosuggestions
if [ -d ${dir_root}/.oh-my-zsh/custom/plugins/zsh-autosuggestions ]; then
    sudo cd ${dir_root}/.oh-my-zsh/custom/plugins/zsh-autosuggestions && git pull
else
    sudo git clone --depth=1 https://github.com/zsh-users/zsh-autosuggestions ${dir_root}/.oh-my-zsh/custom/plugins/zsh-autosuggestions
fi

###zsh-completions
if [ -d ${dir_root}/.oh-my-zsh/custom/plugins/zsh-completions ]; then
    sudo cd ${dir_root}/.oh-my-zsh/custom/plugins/zsh-completions && git pull
else
    sudo git clone --depth=1 https://github.com/zsh-users/zsh-completions ${dir_root}/.oh-my-zsh/custom/plugins/zsh-completions
fi

###zsh-history-substring-search
if [ -d ${dir_root}/.oh-my-zsh/custom/plugins/zsh-history-substring-search ]; then
    sudo cd ${dir_root}/.oh-my-zsh/custom/plugins/zsh-history-substring-search && git pull
else
    sudo git clone --depth=1 https://github.com/zsh-users/zsh-history-substring-search ${dir_root}/.oh-my-zsh/custom/plugins/zsh-history-substring-search
fi

###zsh-syntax-highlighting
if [ -d ${dir_root}/.oh-my-zsh/custom/plugins/zsh-syntax-highlighting ]; then
    sudo cd ${dir_root}/.oh-my-zsh/custom/plugins/zsh-syntax-highlighting && git pull
else
    sudo git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ${dir_root}/.oh-my-zsh/custom/plugins/zsh-syntax-highlighting
fi

###you-should-use
if [ -d ${dir_root}/.oh-my-zsh/custom/plugins/you-should-use ]; then
    sudo cd ${dir_root}/.oh-my-zsh/custom/plugins/you-should-use && git pull
else
    sudo git clone https://github.com/MichaelAquilina/zsh-you-should-use.git ${dir_root}/.oh-my-zsh/custom/plugins/you-should-use
fi

######## STARSHIP ##########
clear
sudo wget https://raw.githubusercontent.com/gabrielomana/MyStarships/main/starship_3.toml -O ${dir_root}/.config/starship.toml
######## REBOOT ZSH ##########
# source ${dir_root}/.zshrc
clear
sudo chsh -s /bin/zsh root
sleep 5
}

function install_ZSH()
{
clear
########Install ZSH##########
if command -v zsh &> /dev/null && command -v git &> /dev/null && command -v wget &> /dev/null; then
    echo -e "ZSH and Git are already installed\n"
else
    if sudo nala install zsh git wget -y || sudo pacman -S zsh git wget || sudo dnf install -y zsh git wget || sudo yum install -y zsh git wget || sudo brew install git zsh wget || pkg install git zsh wget ; then
        echo -e "zsh wget and git Installed\n"
    else
        echo -e "Please install the following packages first, then try again: zsh git wget \n" && exit
    fi
fi


######## BackUp .zshrc ##########
if mv -n ~/.zshrc ~/.zshrc-backup-$(date +"%Y-%m-%d"); then # backup .zshrc
    echo -e "Backed up the current .zshrc to .zshrc-backup-date\n"
fi


######## Installing oh-my-zsh ##########
clear
if [ -d ~/.oh-my-zsh ]; then
    echo -e "oh-my-zsh is already installed\n"
    git -C ~/.oh-my-zsh remote set-url origin https://github.com/ohmyzsh/ohmyzsh.git
else
    git clone --depth=1 https://github.com/ohmyzsh/ohmyzsh.git ~/.oh-my-zsh
fi
sleep 5
######## dotfiles ##########
clear
cp -f dotfiles/.zshrc ~/
mkdir -p ~/.cache/zsh/                # this will be used to store .zcompdump zsh completion cache files which normally clutter $HOME

if [ -f ~/.zcompdump ]; then
    mv ~/.zcompdump* ~/.cache/zsh/
fi
sleep 5
######## Plugins ##########
clear
###ZSH-EXA
if [ -d ~/.oh-my-zsh/custom/plugins/zsh-exa ]; then
    cd ~/.oh-my-zsh/custom/plugins/zsh-exa && git pull
else
    git clone https://github.com/ptavares/zsh-exa.git ~/.oh-my-zsh/custom/plugins/zsh-exa
fi
###ZSH-AUTOPAIR
if [ -d ~/.oh-my-zshcustom/custom/plugins/zsh-autopair ]; then
    cd ~/.oh-my-zsh/custom/plugins/zsh-autopair && git pull
else
    git clone https://github.com/hlissner/zsh-autopair ~/.oh-my-zsh/custom/plugins/zsh-autopair
fi

###zsh-autosuggestions
if [ -d ~/.oh-my-zsh/custom/plugins/zsh-autosuggestions ]; then
    cd ~/.oh-my-zsh/custom/plugins/zsh-autosuggestions && git pull
else
    git clone --depth=1 https://github.com/zsh-users/zsh-autosuggestions ~/.oh-my-zsh/custom/plugins/zsh-autosuggestions
fi

###zsh-completions
if [ -d ~/.oh-my-zsh/custom/plugins/zsh-completions ]; then
    cd ~/.oh-my-zsh/custom/plugins/zsh-completions && git pull
else
    git clone --depth=1 https://github.com/zsh-users/zsh-completions ~/.oh-my-zsh/custom/plugins/zsh-completions
fi

###zsh-history-substring-search
if [ -d ~/.oh-my-zsh/custom/plugins/zsh-history-substring-search ]; then
    cd ~/.oh-my-zsh/custom/plugins/zsh-history-substring-search && git pull
else
    git clone --depth=1 https://github.com/zsh-users/zsh-history-substring-search ~/.oh-my-zsh/custom/plugins/zsh-history-substring-search
fi

###zsh-syntax-highlighting
if [ -d ~/.oh-my-zsh/custom/plugins/zsh-syntax-highlighting ]; then
    cd ~/.oh-my-zsh/custom/plugins/zsh-syntax-highlighting && git pull
else
    git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ~/.oh-my-zsh/custom/plugins/zsh-syntax-highlighting
fi

###you-should-use
if [ -d ~/.oh-my-zsh/custom/plugins/you-should-use ]; then
    cd ~/.oh-my-zsh/custom/plugins/you-should-use && git pull
else
    git clone https://github.com/MichaelAquilina/zsh-you-should-use.git ~/.oh-my-zsh/custom/plugins/you-should-use
fi
sleep 5
######## STARSHIP ##########
clear
curl -sS https://starship.rs/install.sh | sh
wget https://raw.githubusercontent.com/gabrielomana/MyStarships/main/starship_3.toml -O ~/.config/starship.toml
sleep 5

####### REBOOT ZSH ##########
source ~/.zshrc
clear
echo -e "\nSudo access is needed to change default shell\n"
if chsh -s $(which zsh) && /bin/zsh -i -c 'omz update'; then
    echo "ZSH in user: OK"
    sleep 3
    install_ZSH_ROOT
else
    echo -e "Something is wrong"
fi

}
